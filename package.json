{
  "name": "tube-joint-viz",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"cross-env NODE_ENV=development wait-on http://localhost:5173 && electron .\"",
    "build": "tsc && vite build",
    "electron:build": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.tubejoint.app",
    "productName": "octaveeasyfabchallenge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^26.2.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.3",
    "typescript": "^5.3.0",
    "vite": "^5.5.0"
  }
}
